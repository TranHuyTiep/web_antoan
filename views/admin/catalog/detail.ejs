<!-- Right side -->
<div id="rightSide">

	<!-- Account panel top -->
    <%-include ../top_header.ejs%>
	<!-- Main content -->
	<!-- Common -->
	<!-- Title area -->
	<div class="titleArea">
		<div class="wrapper">
			<div class="pageTitle">
				<h5>Danh mục</h5>
				<span>Quản lý thể loại</span>
			</div>

			<div class="horControlB menu_action">
				<ul>
					<li><a href="<%=fullUrl%>/admin/catalog/detail/add/<%=id%>">
							<img src="<%=fullUrl%>/admin/images/icons/control/16/add.png" />
							<span>Thêm mới</span>
						</a></li>

					<li><a href="<%=fullUrl%>/admin/home">
							<img src="<%=fullUrl%>/admin/images/icons/control/16/list.png" />
							<span>Danh Mục </span>
						</a></li>
				</ul>
			</div>

			<div class="clear"></div>
		</div>
	</div>
	<div class="line"></div>

	<!-- Message -->
	<!-- Main content wrapper -->
	<div class="wrapper">

		<!-- Static table -->
		<div class="widget" id='main_content'>

			<div class="title">
				<h6>Danh sách Danh mục</h6>
			</div>

			<table cellpadding="0" cellspacing="0" width="100%" class="sTable mTable myTable taskWidget" id="checkAll">
				<thead>
				<tr>
					<td>Tên</td>
					<td style="width:150px;">Hành động</td>
				</tr>
				</thead>

				<tbody>
                <% for(var i=0; i<data.length; i++) {%>
				<tr class='row_<%=i%>'>

					<td><%=data[i].name%></td>
					<td class="option">
						<a href="<%=fullUrl%>/admin//catalog/detail/edit/<%=data[i].id%>" title="Chỉnh sửa" class="tipS ">
							<img src="<%=fullUrl%>/admin/images/icons/color/edit.png" />
						</a>

						<a href="<%=fullUrl%>/admin/catalog/detail/delete/<%=data[i].id%>" title="Xóa" class="tipS verify_action" >
							<img src="<%=fullUrl%>/admin/images/icons/color/delete.png" />
						</a>
					</td>
				</tr>
                <%}%>
				</tbody>
			</table>
		</div>
	</div>
	<div class="clear mt30"></div>

	<!-- Footer -->
    <%-include ../footer.ejs%>
</div>
<div class="clear"></div>
